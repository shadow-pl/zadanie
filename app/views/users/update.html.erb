<div id="gora"><h1>Update</h1></div>
<div>
  <p>
    <b>Aktualne dane uzytkownika w bazie danych:</b><br />
    Imie: <%= @user.imie %><br />
    Nazwisko: <%= @user.nazwisko %><br />
    Wiek: <%= @user.wiek %><br/>
    Wzrost: <%= @user.wzrost %><br/>
  </p>
</div>  
<div>
  <table id="blad">
  <% @user.errors.each do |attr,msg| %>
  <tr><td> 
  <%=  "#{attr} - #{msg}" %>
  </td></tr>
  <% end %>
  </table>

<% form_for(@user, :url => {:controller => :users, :action => :update, :id => @user}) do |f| %>
  <%= f.label :imie %><br />
  <%= f.text_field :imie %><br />
  <br />
  <%= f.label :nazwisko %><br />
  <%= f.text_field :nazwisko %><br />
  <br />
  <%= f.label :wiek %><br />
  <%= f.text_field :wiek %><br />
  <br />
  <%= f.label :wzrost %><br />
  <%= f.text_field :wzrost %><br />
  <br />

  <%= f.submit 'Update'%>

<% end %>
</div>
<div>  
<br /><br />
<%= link_to "Back", :action => "show_all" %>
</div>